<div class="progress">
  <div id="race-progress-bar" class="progress-bar" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="container py-5">
  <p class="subtitle text-primary">PREZZI E ISCRIZIONI</p>
  <div class="d-flex justify-content-between pr-5">
    <h2><span id="race_step_description">Aggiungi info su iscrizioni</span></h2>
    <h2 class="text-muted">Step <span id="race_step">2</span></h2>
  </div>
</div>


<div class="new-form-container container py-5">
  <div class="row py-5 form-row top">
    <div class="col-md-4">
      <h4>Descrizione e Percorso</h4>
      <p class="text-muted small">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde, sint! Accusamus delectus fuga, distinctio odio quisquam eveniet ipsa labore doloremque, tenetur voluptatum numquam.</p>
    </div>
    <div class="col-md-8">
      <%= render "form", race: @race, price: @price %>
      <div class="container" id="prices">
        <% @prices.each do |price| %>
        <h4>Fasce di prezzo</h4>
        <%= render 'show', price: price %>
        <% end %>
      </div>

    </div>
  </div>
    <div class="row py-5 d-flex justify-content-end">
    <%= link_to 'Continua', race_race_photos_path(@race), class: "mr-0 btn btn-primary px-3" %>
  </div>

</div>









