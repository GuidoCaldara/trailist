<div id="racePhotoCarousel" class="mb-3 carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#racePhotoCarousel" data-slide-to="0" class="active"></li>
    <% (race.race_photos.size - 1).times do %>
      <li data-target="#racePhotoCarousel" data-slide-to="1"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
   <% race.race_photos.each_with_index do |photo, index| %>
    <div class="carousel-item <%= 'active' if index.zero? %>">
      <%= cl_image_tag photo.picture.url(:gallery), class: "d-block w-100"%>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#racePhotoCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#racePhotoCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
