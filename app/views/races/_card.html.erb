<%= link_to race, class:"race-link-card" do %>
      <div class="card overflow-hidden border-0 shadow">
      <% if race.race_photos.any?  %>
        <div class="card-img gradient-overlay" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path race.race_photos.first.picture %>')">
        </div>
      <% else %>
        <div class="card-img gradient-overlay" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://d19m59y37dris4.cloudfront.net/directory/1-3/img/photo/photo-1484154218962-a197022b5858.jpg')">
        </div>
      <% end %>
      <div class="card-body d-flex align-items-center">
        <div class="w-100">
          <div class="d-flex justify-content-between">
            <span class="mr-2 text small text-muted mb-0">
            <i class="fa-map-marker-alt fa mr-1"></i> <%= race.location %>
          </span>

                      <p class="text-muted text small mb-1"><%= l(race.date, format: :long) %></p>

          </div>
        <h5 class="card-title mb-0"><%= race.name %></h5>
          <div class="d-flex mb-1">
          </div>

         <div class="d-flex align-items-center mb-2 pb-0 justify-content-between">
          <div class="d-flex align-items-center ">
          <div class="badge mr-4 px-3 py-2 card-badge <%= race.race_type.downcase %>">
            <%= race.race_type %>
          </div>
          <div class="d-flex align-items-center">
            <%= image_tag 'distance-square.png', class: "card-icon mr-1" %>
            <p class="mb-0  mr-3"><%= race.length %> km  </p>
          </div>
          <div class="d-flex align-items-center">
            <%= image_tag 'elevation-square.png', class: "card-icon mr-1" %>
            <p class="mb-0 "><%= race.elevation %>m d+  </p>
          </div>
          </div>
           <div class="">
          </div>
          </div>



          <div class="d-flex card-subtitle">
       <!--      <p class="flex-shrink-1 mb-0 card-stars text-xs text-right"><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i>
            </p>
 -->          </div>
                  </div>
                </div>
              </div>



<% end %>
