<div class="progress">
  <div id="race-progress-bar" class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="container py-5">
  <p class="subtitle text-primary">FOTO DELLA CORSA</p>
  <div class="d-flex justify-content-between pr-5">
    <h2><span id="race_step_description">Aggiungi fotografie</span></h2>
    <h2 class="text-muted">Step <span id="race_step">3</span></h2>
  </div>
</div>


<div class="new-form-container container py-5">
  <div class="row py-5 form-row top">
    <div class="col-md-4">
      <h4>Descrizione e Percorso</h4>
      <p class="text-muted small">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde, sint! Accusamus delectus fuga, distinctio odio quisquam eveniet ipsa labore doloremque, tenetur voluptatum numquam.</p>
      <%= render 'form', race: @race, photo: @photo %>
      <div id="preview"></div>

    </div>
    <div class="col-md-8">
      <div class="row">
        <% @race.race_photos.each do |photo|%>
          <div class="col-md-4 my-1 px-1">
            <div class="photo-gallery-card" style="background-image: url('<%= cl_image_path photo.picture %>')">
            <%= link_to race_photo_path(photo), method: :delete, data: {confirm: 'Sei sicuro di voler rimuovere l\'immagine?'} do  %>
              <i class="fas fa-trash"></i>
             <% end %>

          </div>
          </div>
    <% end %>

      </div>
    </div>


    </div>
    <div class="row py-5 d-flex justify-content-end">
    <%= link_to 'La tua Bacheca', race_path(@race), class: "mr-3 btn btn-primary px-3" %>
    <%= link_to 'Vedi la Gara', race_path(@race), class: "mr-0 btn btn-primary px-3" %>
  </div>

  </div>









