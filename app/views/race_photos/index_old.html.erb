<div class="container padding-form-container">
      <div class="row">
        <div class="col-md-5">
          <div class="form-card photo-form-card-small card p-4">
            <h1 class="mb-1">Aggiungi foto della gara</h1>
            <%= render 'form', race: @race, photo: @photo %>
          </div>
        </div>
        <div class="col-md-7">
          <div class="form-card card p-4">
            <div class="row">
              <% @photos.each do |photo| %>
                <div class="col-md-4 mt-3">
                  <%= cl_image_tag photo.picture, crop: :fill, class:"race-picture-index" %>
                  <%= link_to race_photo_path(photo), method: :delete do %>
                    <i class="fas fa-trash"></i>
                 <% end %>

                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-end">
          <%= link_to  race_race_photos_path(@race) do %>
          <button type="button" class="btn btn-green float-right">Continua</button>
        <% end %>

      </div>
  </div>
<%= link_to "Vedi la pagina della gara", @race %>


