<div class="container-fluid px-3 login-container">
  <div class="row">
    <div class="col-md-4 col-lg-7 px-0 d-md-block">
      <div style="background-image: url(https://d19m59y37dris4.cloudfront.net/directory/1-3/img/photo/photo-1497436072909-60f360e1d4b1.jpg);" class="bg-cover h-100 mr-n3"></div>
    </div>
    <div class="col-md-8 col-lg-5 d-flex align-items-center">
      <div class="w-100 py-5 px-5 position-relative">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Accedi", class:"login-btn btn btn-lg btn-block btn-primary" %>
          </div>
        <% end %>
              <hr class="my-4">
              <%= link_to user_facebook_omniauth_authorize_path, class:"btn btn-block btn-secondary btn-social mb-3" do  %>
                  <i class="fa-2x fa-facebook-f fab mr-3"> </i>Accedi <span class="d-none d-sm-inline ml-1"> con Facebook</span>
                <% end %>
                    <hr class="my-4">
              <p class="text-center mb-0"><small class="text-muted text-center">Non sei iscritto? <%= link_to "Iscriviti", new_user_registration_path %></small></p>
              <p class="text-center"><small class="text-muted text-center">Hai dimenticato la password? <%= link_to "Clicca qui", new_user_password_path %></small></p>
          </div>
        </div>
      </div>
    </div>
